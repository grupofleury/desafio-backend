{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "migrations/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*"
  ]
}